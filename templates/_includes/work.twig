{% set work = craft.entries.section('work').all() ?? [] %}

{% if work|length %}
  <article class="grid grid-cols-12 gap-x-16 gap-y-24">
    {% for work in craft.entries.section('work').all() %}
        <div class="col-span-4 space-y-5">
          <h2 class="heading3-mono">{{ work.title }}</h2>
          <div class="aspect-[480/288] bg-blue-100 shadow-sm"></div>
          <div class="base-mono">
            <p>Type: Agency (Lorem Ipsum)</p>
            <p>2024</p>
          </div>
        </div>
    {% endfor %}
  </article>
{% endif %}
